server {
	listen 80;
	server_name whichprof.me;
	
	return 301 https://$server_name$request_uri;
}

server {
	listen 443 ssl;
	server_name whichprof.me;
	ssl_certificate /etc/letsencrypt/live/whichprof.me/fullchain.pem;
	ssl_certificate_key /etc/letsencrypt/live/whichprof.me/privkey.pem;
	root /home/fateofnate5/professor_matching/web_code;
	
	#	proxy_set_header X-Real-IP $remote_addr;  
	#	proxy_set_header Host $host;
	#	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

	location = / {
		index index.html;	
	}
	
	location / {
			
	}	

	location /websocket {
		proxy_pass http://127.0.0.1:8000/websocket;
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "upgrade";
		proxy_read_timeout 86400;
	}

	location ~ /.well-known {
		allow all;
	}
}
